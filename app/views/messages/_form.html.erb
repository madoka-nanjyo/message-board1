<%= form_for(@message) do |f| %>

  
<% if @message.errors.present? %>

    <div class="alert alert-danger">
      
<%= alert %>

      <ul>
        
<% @message.errors.full_messages.each do |full_message| %>

          <li>
            
<%= full_message %>

          </li>
        
<% end %>
 
      </ul>
    </div>
  
<% end %>
<div class="form-group">
    <%= f.label :name, "名前", class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
        <%= f.text_field :name, size: 40, maxlength: 30, class:"form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :age, "年齢", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :age, size: 40, maxlength: 30, class: "form-control" %>
    </div>
</div>
<div class="form-group">
    <%= f.label :body, "内容", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_area :body, class: "form-control", rows:6 %>
    </div>
</div>
  <%= f.submit "送信", class: "btn btn-sm btn-primary" %>
<% end %>